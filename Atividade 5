using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace Atividade_5_Lista_2
{
    internal class Program
    {
        static void Main(string[] args)
        {
            int x, y, z;
            Console.WriteLine("Digite a Base:");
            y = int.Parse(Console.ReadLine());
            Console.WriteLine("Digite a Altura:");
            x = int.Parse(Console.ReadLine());
            z = x * y;
            if (z > 100)
            {
                Console.WriteLine("A área é um terreno grande:");
                Console.Write(z)
                Console.Write("\n m^2");

            }
            else
            {
                Console.WriteLine("A área é um terreno pequeno:");
                Console.Write(z);
                Console.Write("\n m^2");
            }
        }
    }
}
