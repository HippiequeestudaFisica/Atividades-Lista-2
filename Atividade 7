using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace Atividade_7_Lista_2
{
    internal class Program
    {
        static void Main(string[] args)
        {
            int x, y, z;
            Console.WriteLine("Digite a Aresta 1");
            y = int.Parse(Console.ReadLine());
            Console.WriteLine("Digite a Aresta 2");
            x = int.Parse(Console.ReadLine());
            Console.WriteLine("Digite a Aresta 3");
            z = int.Parse(Console.ReadLine());
            if (x=z=y)
            {
                Console.WriteLine("Temos um tri창ngulo equilatero.");
            }
            if (x != z != y)
            {
                Console.WriteLine("Temos um tri창ngulo Escaleno.");
            }
            if (x = z != y)
            {
                Console.WriteLine("Temos um tri창ngulo Is처sceles.");
            }
        }
    }
}
